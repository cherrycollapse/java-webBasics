  <filter>
    <filter-name>DataFilter</filter-name>
    <filter-class>step.learning.filters.DataFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>DataFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>DemoFilter</filter-name>
